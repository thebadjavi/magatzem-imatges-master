<!DOCTYPE html>
<html lang="en">
     <head>
        <%- include('./partials/head'); %>
    </head>

    <header>
        <%- include('./partials/header'); %>
    </header>
    <style>
     
.close {
  font-size: 1.5rem;
}

.col-12 img {
  opacity: 0.7;
  cursor: pointer;
  margin: 2rem;
  width: 15rem;
  display: block;
}

.col-12 img:hover {
  opacity: 1;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
        </style>
<body> 
 
    <p style="background-color:red ;"><%= tagline %></p>    
    <h1>Gallery</h1>


<div class="row d-flex flex-wrap align-items-center" data-toggle="modal" data-target="#lightbox">
         <% pictures.forEach(function(picture) { %>

    <div class="col-12 col-md-6 col-lg-3">
        <img alt="algo no a salido como se esperaba"   src=<%= picture.url %> >
        <div class="desc"> <p style="text-transform: uppercase;"><%= picture.title %></p></div>
        <p><%= picture.date %> </p> 
        <p style=" background-color: rgb(<%= picture.color %>)"><%= picture.color %> </p> 
 
     </div> 
   <% }); %> 
  



    <footer>
        <%- include('./partials/footer'); %>
    </footer>
</body>
 